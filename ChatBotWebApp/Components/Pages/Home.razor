@page "/"
@rendermode InteractiveServer




<div>
    <h3>Flintec</h3>
</div>

<div class="ChatContainer">
   
     <div class="ChatMessageWindow">
	
 	    @if (userQuestions.Count > 0)
 	    {

            @foreach (string userQuestion in userQuestions)
 		    {

                <p class="displayChatMessage">@userQuestion</p>

                @if (1==1)
                {
                    <div class="messageContainer">
                        <div class="chatIconContainer">
                            <img src="flintec_logo.png" class="chatIcon" alt="Flintec Logo" />
                        </div>
                        <p class="displayReplyMessage">@userAnswer</p>
                    </div>
                } 
 		    }
 	    }

    
     </div>


    <div class="inputArea">
        <div class="inputWrapper">
            <input type="text" class="inputBar" @bind="userQuestion" placeholder="Type your message here..." @onkeydown="EnterKey" />
            <button class="sendButton" @onclick="ChatMessageSubmit">Send</button>
        </div>

        <div class="contactTextContainer">
            <p class="contactText">Contact the company for more details</p>
        </div>
    </div>




 </div>




